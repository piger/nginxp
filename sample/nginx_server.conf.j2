# -*- nginx -*-

upstream mattermost {
    server 127.0.0.1:8065 fail_timeout=2s;
    keepalive 32;
}


proxy_cache_path /var/cache/nginx levels=1:2 keys_zone=mattermost_cache:10m max_size=3g inactive=120m use_temp_path=off;

server {
    listen 80;
    listen [::]:80;
    server_name {{ mattermost_vhost }};

    error_log /var/log/nginx/chat_error.log warn;
    include /etc/nginx/snippets/letsencrypt.conf;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ mattermost_vhost }};
    error_log /var/log/nginx/chat_error.log warn;

    ssl_certificate /etc/letsencrypt/live/{{ mattermost_vhost }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ mattermost_vhost }}/privkey.pem;
    include /etc/nginx/snippets/ssl.conf;

    # Document root needed just for Let's encrypt
    root /var/www/{{ mattermost_vhost }};

    include /etc/nginx/snippets/letsencrypt.conf;
    # include /etc/nginx/conf.d/security.conf;
    include /etc/nginx/snippets/security_file_access.conf;
    # include /etc/nginx/snippets/general.conf;

    location ~ /api/v[0-9]+/(users/)?websocket$ {
        client_max_body_size 50M;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        include /etc/nginx/proxy_common_headers.conf;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_set_header X-Frame-Options SAMEORIGIN;

        proxy_buffers 256 16k;
        proxy_buffer_size 16k;
        client_body_timeout 60;
        send_timeout 300;
        lingering_timeout 5;
        proxy_read_timeout 90s;
        proxy_send_timeout 300;
        proxy_connect_timeout 90;
        proxy_pass http://mattermost;
    }

    location / {
        client_max_body_size 50M;

        proxy_set_header Connection "";
        include /etc/nginx/proxy_common_headers.conf;
        proxy_set_header X-Frame-Options SAMEORIGIN;
        proxy_set_header X-Forwarded-Ssl on;

        proxy_buffers 256 16k;
        proxy_buffer_size 16k;
        proxy_read_timeout 600s;
        proxy_cache mattermost_cache;
        proxy_cache_revalidate on;
        proxy_cache_min_uses 2;
        proxy_cache_use_stale timeout;
        proxy_cache_lock on;
        proxy_http_version 1.1;
        proxy_pass http://mattermost;
    }
}
